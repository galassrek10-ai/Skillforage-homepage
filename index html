<!-- JavaScript per la logica del Modal (Pop-up Richiesta Demo) e Animazione -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // --- Logica Modal (Pop-up Richiesta Demo) ---
    const modal = document.getElementById('demoModal');
    const closeModalBtn = document.getElementById('closeModalBtn');
    
    // Raccoglie tutti i pulsanti che devono aprire il modal
    const demoButtons = [
        document.getElementById('navDemoBtn'),
        document.getElementById('heroDemoBtnPrimary'),
        document.getElementById('videoDemoBtn'),
        document.getElementById('enterpriseDemoBtn'),
        document.getElementById('footerDemoBtn')
    ].filter(btn => btn); // Filtra i pulsanti non trovati

    const openModal = (e) => {
        if (e) { e.preventDefault(); }
        modal.style.display = 'flex';
    };

    const closeModal = () => {
        modal.style.display = 'none';
    };

    // Assegna la funzione di apertura a tutti i bottoni Demo
    demoButtons.forEach(btn => btn.addEventListener('click', openModal));
    
    // Assegna la funzione di chiusura al bottone interno al modal
    closeModalBtn.addEventListener('click', closeModal);
    
    // Chiude il modal cliccando sull'area esterna
    modal.addEventListener('click', (e) => {
        if (e.target === modal) {
            closeModal();
        }
    });

    // --- Logica di navigazione smooth (opzionale) ---
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const targetId = this.getAttribute('href');
            document.querySelector(targetId).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });
  });
</script>
